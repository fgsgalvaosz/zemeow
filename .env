# ========================================
# ZeMeow WhatsApp API - Configuração
# ========================================

# CONFIGURAÇÕES DO BANCO DE DADOS
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=zemeow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SSLMODE=disable

# Pool de Conexões do Banco
DATABASE_MAX_OPEN_CONNS=50
DATABASE_MAX_IDLE_CONNS=10
DATABASE_CONN_MAX_LIFETIME=15m
DATABASE_CONN_MAX_IDLE_TIME=5m

# CONFIGURAÇÕES DO SERVIDOR
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENVIRONMENT=development
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# AUTENTICAÇÃO
ADMIN_API_KEY=my-super-secret-api-key

# WHATSAPP
WHATSAPP_TIMEOUT=30s
WHATSAPP_RECONNECT_INTERVAL=5s
QR_CODE_TIMEOUT=300s

# LOGGING
LOG_LEVEL=info
LOG_PRETTY=true
LOG_COLOR=true
LOG_CONSOLE=true
LOG_FORMAT=console

# WEBHOOKS
WEBHOOK_TIMEOUT=10s
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_INTERVAL=5s

# MINIO (ARMAZENAMENTO DE MÍDIAS)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=zemeow-media
MINIO_USE_SSL=false
MINIO_REGION=us-east-1
MINIO_PUBLIC_URL=