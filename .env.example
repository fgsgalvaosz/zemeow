# Configurações do Banco de Dados
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=zemeow
POSTGRES_USER=zemeow
POSTGRES_PASSWORD=zemeow123
POSTGRES_SSLMODE=disable
DATABASE_URL=postgres://zemeow:zemeow123@localhost:5432/zemeow?sslmode=disable

# Pool de Conexões do Banco
DATABASE_MAX_OPEN_CONNS=50
DATABASE_MAX_IDLE_CONNS=10
DATABASE_CONN_MAX_LIFETIME=15m
DATABASE_CONN_MAX_IDLE_TIME=5m

# Configurações do Servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENVIRONMENT=development
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# Autenticação
ADMIN_TOKEN=your_admin_secret_token_here
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here
TOKEN_EXPIRY=24h

# WhatsApp
WHATSAPP_TIMEOUT=30s
WHATSAPP_RECONNECT_INTERVAL=5s
QR_CODE_TIMEOUT=300s

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Webhooks
WEBHOOK_TIMEOUT=10s
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_INTERVAL=5s

# Docker Compose (PostgreSQL)
PGADMIN_EMAIL=admin@zemeow.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8080